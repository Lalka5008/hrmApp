<UserControl x:Class="hrm.Views.EmployeeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DataGrid ItemsSource="{Binding Employees}" AutoGenerateColumns="False">
        <DataGrid.Columns>
            <DataGridTextColumn Header="ID" Binding="{Binding EmployeeId}"/>
            <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}"/>
            <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}"/>
            <DataGridTextColumn Header="Department" Binding="{Binding Department.Name}"/>
            <DataGridTextColumn Header="Position" Binding="{Binding Position.Title}"/>
        </DataGrid.Columns>
    </DataGrid>
</UserControl>